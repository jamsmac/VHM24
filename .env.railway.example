# ============================================================================
# VendHub Manager - Railway Production Environment Variables
# ============================================================================
# Copy these variables to Railway Dashboard → Variables
# SECURITY: Never commit actual values to version control!
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=production
VERSION=1.0.0

# ============================================================================
# Database - Supabase PostgreSQL
# ============================================================================
# Get from Supabase: Settings → Database → Connection String
# Use the POOLING connection string for better performance
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/postgres

# ============================================================================
# Authentication
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars

# OAuth/Manus Integration
VITE_OAUTH_PORTAL_URL=https://oauth.manus.im
OAUTH_SERVER_URL=https://oauth.manus.im
VITE_APP_ID=your-manus-app-id
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=your-forge-api-key
VITE_FRONTEND_FORGE_API_KEY=your-frontend-forge-api-key
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im

# ============================================================================
# AI Integration - Claude API
# ============================================================================
# Get from Anthropic: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================================================
# Telegram Integration
# ============================================================================
# Get from Telegram BotFather: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Your Telegram user ID (for owner notifications)
TELEGRAM_OWNER_ID=123456789

# ============================================================================
# Application Branding
# ============================================================================
VITE_APP_TITLE=VendHub Manager
VITE_APP_LOGO=https://your-domain.com/logo.png

# ============================================================================
# Owner Information
# ============================================================================
OWNER_NAME=Your Name
OWNER_OPEN_ID=your-manus-open-id

# ============================================================================
# Analytics (Optional)
# ============================================================================
VITE_ANALYTICS_ENDPOINT=https://analytics.your-domain.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# ============================================================================
# Email Notifications (Optional)
# ============================================================================
# For Gmail: use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# ============================================================================
# Digest Email Configuration (Optional)
# ============================================================================
DIGEST_ENABLED=true
DIGEST_RECIPIENTS=admin@your-domain.com,manager@your-domain.com
DIGEST_FREQUENCY=daily

# ============================================================================
# Backup Configuration (Optional)
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ============================================================================
# Performance Tuning
# ============================================================================
NODE_OPTIONS=--max-old-space-size=512
DB_POOL_MIN=5
DB_POOL_MAX=25
DB_QUERY_TIMEOUT=30000

# ============================================================================
# Security
# ============================================================================
# Enable CORS for specific domains
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
FEATURE_AI_AGENTS=true
FEATURE_TELEGRAM_BOT=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_STOCK_TRANSFERS=true
FEATURE_INVENTORY_TRACKING=true
FEATURE_TASK_MANAGEMENT=true

# ============================================================================
# Debug Mode (Production: false)
# ============================================================================
DEBUG=false
VERBOSE_LOGGING=false
