{
  "dashboard": {
    "id": null,
    "uid": "vendhub-security",
    "title": "VendHub - Security Metrics",
    "tags": ["vendhub", "security"],
    "timezone": "Asia/Tashkent",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "annotations": {
      "list": []
    },
    "templating": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Failed Login Attempts (Last Hour)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "increase(vendhub_login_failures_total[1h])",
            "legendFormat": "Failed Logins"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textMode": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Rate Limit Hits (Last Hour)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "increase(vendhub_http_request_errors_total{status=\"429\"}[1h])",
            "legendFormat": "Rate Limited"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 100 },
                { "color": "red", "value": 500 }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Active Sessions",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "increase(vendhub_sessions_created_total[24h]) - increase(vendhub_sessions_destroyed_total[24h]) > 0 or increase(vendhub_sessions_created_total[24h])",
            "legendFormat": "Active Sessions"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 500 },
                { "color": "red", "value": 1000 }
              ]
            },
            "min": 0,
            "max": 1500,
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "2FA Success Rate",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(vendhub_2fa_authentications_total{result=\"success\"}[1h])) / sum(rate(vendhub_2fa_authentications_total[1h])) * 100",
            "legendFormat": "Success %"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 90 },
                { "color": "green", "value": 98 }
              ]
            },
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "Login Attempts Over Time",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "rate(vendhub_login_attempts_total{result=\"success\"}[5m]) * 60",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(vendhub_login_attempts_total{result=\"failure\"}[5m]) * 60",
            "legendFormat": "Failed"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "pointSize": 5
            },
            "unit": "reqpm"
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Failed" },
              "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "Successful" },
              "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Token Refresh Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "rate(vendhub_http_requests_total{route=\"/api/auth/refresh\", status=\"200\"}[5m]) * 60",
            "legendFormat": "Successful Refreshes"
          },
          {
            "expr": "rate(vendhub_http_requests_total{route=\"/api/auth/refresh\", status=~\"4..\"}[5m]) * 60",
            "legendFormat": "Failed Refreshes"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "reqpm"
          }
        }
      },
      {
        "id": 7,
        "title": "Login Failure Reasons",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "increase(vendhub_login_failures_total[24h])",
            "legendFormat": "{{ reason }}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Rate Limited Endpoints",
        "type": "table",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 12 },
        "targets": [
          {
            "expr": "topk(10, increase(vendhub_http_request_errors_total{status=\"429\"}[24h]))",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Value" },
              "properties": [
                { "id": "displayName", "value": "Rate Limited Count" }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true, "__name__": true, "job": true, "instance": true },
              "renameByName": { "route": "Endpoint", "method": "Method" }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Audit Log Events",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 12 },
        "targets": [
          {
            "expr": "rate(vendhub_audit_log_events_total[5m]) * 60",
            "legendFormat": "{{ action }}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80,
              "stacking": { "mode": "normal" }
            },
            "unit": "reqpm"
          }
        }
      },
      {
        "id": 10,
        "title": "Security Alerts",
        "type": "alertlist",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
        "options": {
          "alertName": "",
          "dashboardAlerts": false,
          "groupBy": [],
          "groupMode": "default",
          "maxItems": 10,
          "sortOrder": 1,
          "stateFilter": {
            "alerting": true,
            "firing": true,
            "noData": false,
            "normal": false,
            "pending": true
          },
          "viewMode": "list"
        }
      }
    ]
  }
}
