# ============================================================================
# VendHub Manager - Production Environment Variables
# ============================================================================
# Copy this file to .env.production and fill in the actual values
# SECURITY: Never commit .env.production to version control!
# ============================================================================

# ==========================================================================
# Application
# ==========================================================================
NODE_ENV=production
VERSION=1.0.0

# ==========================================================================
# Database - PostgreSQL
# ==========================================================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=vendhub
DATABASE_USER=vendhub
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==========================================================================
# Cache & Queue - Redis
# ==========================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==========================================================================
# Authentication - JWT
# ==========================================================================
JWT_SECRET=CHANGE_ME_STRONG_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==========================================================================
# Storage - MinIO (S3-compatible)
# ==========================================================================
S3_ENDPOINT=http://minio:9000
S3_BUCKET=vendhub
S3_ACCESS_KEY=CHANGE_ME_ACCESS_KEY
S3_SECRET_KEY=CHANGE_ME_SECRET_KEY
S3_REGION=us-east-1

# For production with Cloudflare R2 or AWS S3, use:
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# S3_REGION=auto

# ==========================================================================
# Telegram Bot
# ==========================================================================
TELEGRAM_BOT_TOKEN=CHANGE_ME_GET_FROM_BOTFATHER

# ==========================================================================
# Frontend
# ==========================================================================
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
NEXT_PUBLIC_WS_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# ==========================================================================
# Monitoring - Grafana
# ==========================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
GRAFANA_ROOT_URL=https://your-domain.com/grafana

# ==========================================================================
# Workers Configuration
# ==========================================================================
COMMISSION_WORKER_CONCURRENCY=2

# ==========================================================================
# Email (Optional - for notifications)
# ==========================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@vendhub.com

# ==========================================================================
# Sentry (Optional - for error tracking)
# ==========================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# ==========================================================================
# Logging
# ==========================================================================
LOG_LEVEL=info
LOG_FORMAT=json
