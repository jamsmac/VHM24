{
  "name": "vendhub",
  "version": "1.0.0",
  "private": true,
  "description": "VendHub Manager - Monorepo",
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint || true",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "test:cov": "cd backend && npm run test:cov",
    "type-check": "npm run type-check:backend",
    "type-check:backend": "cd backend && npx tsc --noEmit",
    "type-check:frontend": "cd frontend && npx tsc --noEmit || true",
    "build": "npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "cmdk": "^1.1.1"
  }
}
