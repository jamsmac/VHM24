# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# IMPORTANT: Copy this file to .env.production and fill in real values
# NEVER commit .env.production to version control!
# ============================================================================

# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# Redis Configuration
REDIS_URL=redis://default:password@host:6379

# JWT Configuration - USE STRONG RANDOM SECRETS!
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_64_CHARS
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Separate secret for refresh tokens (recommended)
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_STRONG_RANDOM_SECRET

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-api-domain.com/telegram/webhook
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id
TELEGRAM_ADMIN_USERNAME=@your-username

# File Storage Configuration (S3-compatible)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET=your-bucket-name
S3_REGION=auto

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_GLOBAL_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PREFIX=monitoring
METRICS_PATH=/monitoring/metrics

# Scheduled Tasks
ENABLE_SCHEDULED_TASKS=true
TASK_CHECK_OFFLINE_INTERVAL=30
TASK_CLEANUP_OLD_FILES_DAYS=30

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-smtp-password
SMTP_FROM="VendHub <noreply@your-domain.com>"

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Encryption - USE STRONG RANDOM KEY!
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_KEY

# 2FA Configuration
TWO_FA_APP_NAME=VendHub Manager
TWO_FA_ISSUER=VendHub

# Session Configuration - USE STRONG RANDOM SECRET!
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_STORAGE=true
